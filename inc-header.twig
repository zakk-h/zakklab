<nav class="navbar navbar-expand-lg navbar-light bg-transparent"><div class="container">
	{% if site.Logo is defined %}
		<a class="navbar-brand" href="/"><img src="{{ site.Logo }}" alt="" style="height:64px; width:auto;"></a>
	{% endif %}

	<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
		<span class="navbar-toggler-icon"></span>
	</button>

	<div class="collapse navbar-collapse" id="navbarNav">
		<div class="navbar-nav">{% for key,lnk in site.Menu %}
			{% if lnk is array %}
				<div class="nav-item dropdown">
				<a class="nav-link text-nowrap dropdown-toggle" href="#" id="mnudropdown-{{loop.index}}" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">{{ key|raw }}</a>
				<div class="dropdown-menu" aria-labelledby="mnudropdown-{{loop.index}}">
				{% for subkey,sublnk in lnk %}
					<a class="dropdown-item text-nowrap" href="{{ sublnk }}">{{ subkey }}</a>
				{% endfor %}
				</div></div>
			{% else %}
				<a class="nav-item nav-link text-nowrap" href="{{ lnk }}">{{ key|raw }}</a>
			{% endif %}
		{% endfor %}</div>
	</div>
</div></nav>